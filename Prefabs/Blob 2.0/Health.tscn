	vec2 diff = coord - vec2(0.5);
	return sqrt(diff.x * diff.x + diff.y * diff.y); 
	}

void fragment(){
	
	vec2 coord = UV * 1.15;
	
	float value = celular_noise(coord);
	value *= 1.2;
	COLOR  = vec4(color,value);
	
	if (distance(UV,vec2(0.5,0.5)) > amt/2.0){
		COLOR = vec4(0.0);
	}
} "

